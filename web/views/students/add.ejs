<div class="card mx-auto" style="max-width:700px;">
	<div class="card-body">
		<h5 class="card-title"><i class="fa fa-user-plus"></i>  Add New Student</h5>
		<form action="<%= action('students')%>" method="post" class="row g-3">
			<% if(errorsAny()) { %>
			<div class="text-danger">
				<% errors.forEach((error)=>{ %>
				<p><%= error.message%></p>
				<% }) %>
			</div>
			<% } %>
			<div class="col-12">
				<label for="name" class="form-label">Name</label>
				<input id="name" name="name" value="<%= old('name') %>" class="form-control">
			</div>
			<div class="col-12">
				<label for="email" class="form-label">email</label>
				<input type="email" name="email" value="<%= old('email') %>" id="email" class="form-control">
			</div>
			<div class="col-12">
				<label for="education" class="form-label">Education</label>
				<%- include('../components/educationDropdown', {educations:educations}) %>
			</div>
            <div class="col-12">
				<label for="semester" class="form-label">Semester</label>
				<input type="number" id="semester" name="semester" value="<%= old('semester') %>" class="form-control">
			</div>
			<div class="text-center d-flex justify-content-between">
				<button type="submit" class="btn btn-sm btn-dark"><i class="fa fa-plus-circle"></i> Create</button>
				<a class="btn btn-sm btn-danger" href="<%= url.back() %>"><i class="fa fa-cancel"></i> Cancel</a>
			</div>
		</form>
	</div>
</div>
