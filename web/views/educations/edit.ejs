<div class="card mx-auto" style="max-width:700px;">
	<div class="card-body">
		<h5 class="card-title"><i class="fa fa-edit"></i>  Edit Education</h5>
		<form action="<%= action('educations', model._id)%>" method="POST" class="row g-3">
			<%- method('PATCH')%>
			<% if(errorsAny()) { %>
			<div class="text-danger">
				<% errors.forEach((error)=>{ %>
				<p><%= error.message%></p>
				<% }) %>
			</div>
			<% } %>
			<div class="col-12">
				<label for="name" class="form-label">Name</label>
				<input id="name" name="name" value="<%= old('name', model.name) %>" class="form-control">
			</div>
			<div class="col-12">
				<label for="semesters" class="form-label">Semesters</label>
				<input type="text" name="semesters" value="<%= old('semesters', model.semesters) %>" id="semesters" class="form-control">
			</div>
			<div class="col-12">
				<label for="description" class="form-label">Description</label>
				<textarea name="description" id="description" rows="5" class="form-control"><%= old('description', model.description) %></textarea>
			</div>
			<div class="text-center d-flex justify-content-between">
				<button type="submit" class="btn btn-sm btn-dark"><i class="fa fa-plus-circle"></i> Update</button>
				<a class="btn btn-sm btn-danger" href="<%= url.back() %>"><i class="fa fa-cancel"></i> Cancel</a>
			</div>
		</form>
	</div>
</div>
